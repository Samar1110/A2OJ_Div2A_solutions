#include <bits/stdc++.h>

using namespace std;

int main()
{
    long long int n;
    cin>>n;
    string s[n];
    for(long long int i=0;i<n;i++)
    {
        cin>>s[i];
    }
    for(long long int i=0;i<n;i++)
    {
        if(s[i].length()<11)
        {
            cout<<s[i]<<endl;
        }
        else
        {
            cout<<s[i].at(0)<<s[i].length()-2<<s[i].at(s[i].length()-1)<<endl;
        }
    }
    return 0;
}
