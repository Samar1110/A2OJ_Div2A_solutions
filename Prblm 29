#include <bits/stdc++.h>

using namespace std;

int main()
{
    long long int n,a,i,j,k;
    cin>>n;
    vector <int> v1,v2;
    for(i=0;i<n;i++)
    {
        cin>>a;
        if(a%2==0)
        {
            v1.push_back(a);
            j=i+1;
        }
        else
        {
            v2.push_back(a);
            k=i+1;
        }
        
    }
    if(v1.size()==1)
    {
        cout<<j;
    }
    if(v2.size()==1)
    {
        cout<<k;
    }

    return 0;
}
