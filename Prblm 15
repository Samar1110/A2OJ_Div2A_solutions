#include <bits/stdc++.h>

using namespace std;

int main()
{
    long long int n;
    cin>>n;
    long long int x[n],y[n],z[n],i,a,b,c,sum1=0,sum2=0,sum3=0;
    for(i=0;i<n;i++)
    {
        cin>>a>>b>>c;
        x[i]=a;
        y[i]=b;
        z[i]=c;
    }
    for(i=0;i<n;i++)
    {
        sum1=sum1+x[i];
        sum2=sum2+y[i];
        sum3=sum3+z[i];
    }
    (sum1==0&&sum2==0&&sum3==0)?cout<<"YES":cout<<"NO";

    return 0;
}
